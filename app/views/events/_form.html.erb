<%= form_with(model: @event) do |f| %>
	<% if @event.errors.any? %>
		<div class="alert alert-warning mx-auto col-md-6 col-md-offset-3 mb-3">
			<h2>
				<%= pluralize(@event.errors.count, "error") %> 
				prohibited this event from being saved:
			</h2>

			<ul>
				<% @event.errors.each do |error| %>
					<li>
						<%= error.full_message %>
					</li>
				<% end %>
			</ul>
		</div>
		<% end %>

	<div class="container">
		<div class="col-md-6 col-md-offset-3 mx-auto">
			<div class="row">
				<div class="col mb-3">
					<%= f.label :event_name, class: "form-label" %>
					<%= f.text_field :event_name, class: "form-control" %>
				</div>
				<div class="col mb-3">
					<%= f.label :date, class: "form-label" %>
					<%= f.datetime_field :date, class: "form-control" %> 
				</div>
			</div>
			<div class="mb-3">
				<%= f.label :location, class: "form-label" %>
				<%= f.text_area :location, class: "form-control" %>
			</div>
			<div class="mb-3">
				<%= f.label :description, class: "form-label" %>
				<%= f.text_area :body, class: "form-control" %>
			</div>
			<div class="mb-3">
				<%= f.label :status, class: "form-label" %>
				<%= f.select :status, options_for_select(['Private','Public'], selected: 'Public'), {}, {class: "form-select text-center"} %>
			</div>
			<div class="mb-4">
				<%= f.hidden_field :user_id, value: current_user.id, class: "form-control" %>
			</div>
			<div class="mb-3 d-grid gap-3">
				<%= f.submit class: "btn btn-outline-primary" %>
			</div>
		</div>
	</div>
<% end %>
